<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="neu.homework.sunshine.medical.mapper.MmsSicknessSubjectMapper">

    <select id="getBySicknessWithSubject" resultMap="subjectDetailMap">
        SELECT * FROM mms_sickness_subject WHERE sickness = #{s}
    </select>

    <resultMap id="subjectDetailMap" type="MmsSicknessSubject">
        <id property="id" column="id" ></id>
        <result property="subject" column="subject" ></result>
        <result property="sickness" column="sickness"></result>
        <association property="subjectDetail" column="subject" select="neu.homework.sunshine.medical.mapper.MmsSubjectMapper.getById">

        </association>
    </resultMap>
</mapper>
